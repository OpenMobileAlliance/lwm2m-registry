<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://openmobilealliance.org/tech/profiles/LWM2M.xsd">
	<Object ObjectType="MODefinition">
		<Name>People counter</Name>
		<Description1>The uCIFI people counter provides people counting information using Bluetooth beacon or any other method.</Description1>
		<ObjectID>3434</ObjectID>
		<ObjectURN>urn:oma:lwm2m:ext:3434</ObjectURN>
		<LWM2MVersion>1.0</LWM2MVersion>
		<ObjectVersion>1.0</ObjectVersion>
		<MultipleInstances>Multiple</MultipleInstances>
		<Mandatory>Optional</Mandatory>
		<Resources>
			<Item ID="1">
				<Name>Actual number of persons</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Mandatory</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Number of persons currently identified by the device.</Description>
			</Item>
			<Item ID="2">
				<Name>Daily number of persons</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Cumulated number of persons detected by the device since beginning of the day.</Description>
			</Item>
			<Item ID="3">
				<Name>Cumulated number of persons</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Cumulated number of persons detected by the device since last reset.</Description>
			</Item>
			<Item ID="4">
				<Name>Reset of cumulated number</Name>
				<Operations>E</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type></Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Reset the cumulated number of persons.</Description>
			</Item>
			<Item ID="5">
				<Name>Daily number of passages</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Number of passages (same people could be counted multiple times if identified several times) today.</Description>
			</Item>
			<Item ID="6">
				<Name>Cumulated number of passages</Name>
				<Operations>R</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>Integer</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Cumulated number of passages since last reset.</Description>
			</Item>
			<Item ID="7">
				<Name>Reset of cumulated number of passages</Name>
				<Operations>E</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type></Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Reset the cumulated number of passages.</Description>
			</Item>
			<Item ID="8">
				<Name>Type of sensor</Name>
				<Operations>RW</Operations>
				<MultipleInstances>Single</MultipleInstances>
				<Mandatory>Optional</Mandatory>
				<Type>String</Type>
				<RangeEnumeration></RangeEnumeration>
				<Units></Units>
				<Description>Type of sensor (e.g. Bluetooth beacon, WIFI detector).</Description>
			</Item>
		</Resources>
		<Description2></Description2>
	</Object>
</LWM2M>
